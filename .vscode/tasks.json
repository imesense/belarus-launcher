{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SBLauncher.sln",
                "-p:GenerateFullPaths=true",
                "--consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/StalkerBelarus.Launcher.Avalonia/StalkerBelarus.Launcher.Avalonia.csproj",
                "-p:GenerateFullPaths=true",
                "--consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/SBLauncher.sln"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
