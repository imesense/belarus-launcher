<UserControl
    x:Class="StalkerBelarus.Launcher.Avalonia.Views.DownloadMenuView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StalkerBelarus.Launcher.Avalonia.ViewModels"
    xmlns:views="clr-namespace:StalkerBelarus.Launcher.Avalonia.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="viewModels:DownloadMenuViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <viewModels:DownloadMenuViewModel />
    </Design.DataContext>

    <DockPanel Margin="45,0,15,0" VerticalAlignment="Stretch">
        <Button
            Margin="10,55"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Right"
            Command="{Binding Close}"
            Content="Выход"
            DockPanel.Dock="Bottom"
            FontSize="38" />
        <StackPanel
            Margin="5,15"
            HorizontalAlignment="Right"
            VerticalAlignment="Center">
            <Button
                HorizontalContentAlignment="Right"
                Command="{Binding StartDownload}"
                CommandParameter="{Binding $parent[views:LauncherView].DataContext}"
                IsVisible="{Binding !IsProgress}"
                Content="Начать загрузку"
                FontSize="38" />
            <StackPanel
                IsVisible="{Binding IsProgress}"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <TextBlock FontSize="24" HorizontalAlignment="Left" 
                           TextWrapping="Wrap" 
                           Margin="0 10" 
                           Text="{Binding StatusProgress}" />
                <ProgressBar Margin="10 5" Height="10" Value="{Binding DownloadProgress}" />
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
