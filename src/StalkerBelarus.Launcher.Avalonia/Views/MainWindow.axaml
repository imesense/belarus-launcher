<Window
    x:Class="StalkerBelarus.Launcher.Avalonia.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StalkerBelarus.Launcher.Avalonia.ViewModels"
    Title="S.T.A.L.K.E.R. Belarus Launcher"
    Width="1135"
    Height="760"
    x:DataType="viewModels:MainWindowViewModel"
    CanResize="False"
    ExtendClientAreaToDecorationsHint="True"
    Icon="/Assets/Icons/stalker_cs.ico"
    SystemDecorations="None"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Design.DataContext>
        <viewModels:MainWindowViewModel />
    </Design.DataContext>

    <ContentControl Content="{Binding PageViewModel}" />
</Window>
