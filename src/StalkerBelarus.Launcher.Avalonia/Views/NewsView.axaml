<UserControl
    x:Class="StalkerBelarus.Launcher.Avalonia.Views.NewsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:StalkerBelarus.Launcher.Avalonia.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:NewsViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:NewsViewModel />
    </Design.DataContext>

    <Border
        MinWidth="200"
        MinHeight="150"
        Padding="10">
        <StackPanel>
            <StackPanel>
                <!--  Title  -->
                <TextBlock
                    Margin="0,10"
                    FontSize="20"
                    Text="{Binding Title}"
                    Classes="styled" />
                <!--  Description  -->
                <TextBlock
                    FontSize="14"
                    Text="{Binding Description}"
                    TextAlignment="Left"
                    TextWrapping="Wrap" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
