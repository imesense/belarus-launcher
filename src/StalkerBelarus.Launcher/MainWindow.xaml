<Window
    x:Class="StalkerBelarus.Launcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StalkerBelarus.Launcher"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rx="http://reactiveui.net"
    xmlns:vm="clr-namespace:StalkerBelarus.Launcher.ViewModels"
    Title="S.T.A.L.K.E.R. Belarus"
    Width="1135"
    Height="760"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Assets/Images/background.png" />
    </Window.Background>

    <Border
        BorderBrush="Gray"
        BorderThickness="1"
        UseLayoutRounding="True">
        <Border.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/Images/vinetka.png" />
        </Border.Background>
        <Grid>
            <Image
                Grid.Row="0"
                Grid.Column="0"
                Width="290"
                Margin="10,15"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Source="pack://application:,,,/Assets/Images/logo.png" />

            <rx:RoutedViewHost
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Router="{Binding Router}" />
        </Grid>
    </Border>
</Window>
