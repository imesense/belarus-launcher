<Window
    x:Class="StalkerBelarus.Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StalkerBelarus.Launcher"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="S.T.A.L.K.E.R. Belarus"
    Width="1135"
    Height="760"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Assets/Images/background.png" />
    </Window.Background>

    <Border BorderBrush="Gray" BorderThickness="1">
        <Border.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/Images/vinetka.png" />
        </Border.Background>
    <Grid>
            <Image
                Grid.Row="0"
                Grid.Column="0"
                Width="290"
                Margin="10,15"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Source="pack://application:,,,/Assets/Images/logo.png" />

    </Grid>
    </Border>
</Window>
